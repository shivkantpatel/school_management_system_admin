<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Insert</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>


    <% let student_id = "" %>
    <% let class__ = "" %>
    <% let attendance_date = "" %>
    <% let status__ = "" %>
    <% let narration = "" %>
      
    <% if(attendanceValidation != null){ %>

        <% student_id = attendanceValidation.student_id %>
        <% class__ = attendanceValidation.class__ %>
        <% attendance_date = attendanceValidation.attendance_date %>
        <% status__ = attendanceValidation.status__ %>
        <% narration = attendanceValidation.narration %>

        <% console.log(student_id + class__ + attendance_date + status__ + narration) %>
        
   <% } %>


    <div class="">
        <%-include('../header/headerBackToHome')%>
    </div>
    <div class="w-[90%] m-auto mt-[6px] mb-[7px]">
        <a href="/studentAttendanceShow" class="rounded-[10%] border px-5 py-1"><i class="fa-solid fa-arrow-left"></i></a>
    </div>
    <div class="bg-red w-full  flex justify-center">
        <div class="container w-full h-[87vh] flex justify-center ">
            <div class="container m-auto w-3/4 h-[60vh]  overflow-auto  ">
                
                <form action="/studentAttFormInsert" method="post" class="grid lg:grid-cols-2 md:grid-cols-2 sm:grid-cols-1 gap-5 md:gap-y-10 pt-2">
                    <div class=" flex justify-center text-2xl text-white col-span-full">
                        <h1 class=" border-sky-600 border-b-2 rounded-[5px] text-sky-600 transition transform ease-in duration-300 hover:scale-110 cursor-pointer hover:text-yellow-500  md:text-[20px] text-[16px]  ">Student Attendance Form </h1>
                    </div>
                   
                   <div class = " flex justify-center flex-col items-center">
                    <input class="w-3/4 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 px-2 transition transform ease-in-out duration-300 hover:scale-110" type="text" placeholder="student Id" name="student_id">
                    
                    <p class="text-red-700  pr-[275px]"><%= student_id %></p>
                    </div>
                   <div class = " flex md:justify-center flex-col items-center">
                    <select name="class__" id="" class="w-3/4 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 px-2 transition transform ease-in-out duration-300 hover:scale-110">
                     <option value="" disabled selected>* Select Class</option>
                     <option value="Class 1">Class 1</option>
                     <option value="Class 2">Class 2</option>
                     <option value="Class 3">Class 3</option>
                    
                     
                    </select>
                    <p class="text-red-700"><%= class__ %></p>
                   </div>
                   <div class = " flex justify-center flex-col items-center">
                    <input class="w-3/4 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 px-2 transition transform ease-in-out duration-300 hover:scale-110" type="date" placeholder="Attendance Date" name="attendance_date">
                    <p class=" text-red-700 "><%= attendance_date %></p>
                    </div>
                   <div class = " flex md:justify-center flex-col items-center">
                     <select name="status__" id="" class="w-3/4 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 px-2 transition transform ease-in-out duration-300 hover:scale-110">
                      <option value="" disabled selected>* Present & Absent Status</option>
                      <option value="Present">Present</option>
                      <option value="Absent">Absent</option>
                     
                      
                     </select>
                     <p class="text-red-700"><%= status__ %></p>
                    </div>
                   <div class = " flex justify-center flex-col items-center">
                    <input class="w-3/4 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 px-2 transition transform ease-in-out duration-300 hover:scale-110" type="text" placeholder="Narration" name="narration">
                    <p class="text-red-700 pr-[275px]"><%= narration %></p>
                    </div>

                   <div class = " flex justify-center col-span-full">
                    <input class=" cursor-pointer text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2transition transform ease-in-out duration-300 hover:scale-110" type="submit" >
                    </div>
                    
                </form>

            </div>
        </div>
    </div>
        

</body>
</html>


